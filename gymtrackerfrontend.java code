package gym;

import javax.swing.*;
import javax.swing.table.DefaultTableModel;
import java.awt.*;
import java.awt.event.*;
import java.sql.*;

public class GymUI extends JFrame {

    JTextField nameField, ageField, typeField, searchField;
    JTable table;

    public GymUI() {
        setTitle("Gym Membership Tracker");
        setSize(600, 450);
        setLayout(null);

        JLabel lblName = new JLabel("Name:");
        lblName.setBounds(20, 30, 100, 25);
        add(lblName);

        nameField = new JTextField();
        nameField.setBounds(120, 30, 150, 25);
        add(nameField);

        JLabel lblAge = new JLabel("Age:");
        lblAge.setBounds(20, 70, 100, 25);
        add(lblAge);

        ageField = new JTextField();
        ageField.setBounds(120, 70, 150, 25);
        add(ageField);

        JLabel lblType = new JLabel("Type:");
        lblType.setBounds(20, 110, 100, 25);
        add(lblType);

        typeField = new JTextField();
        typeField.setBounds(120, 110, 150, 25);
        add(typeField);

        JButton addBtn = new JButton("Add Member");
        addBtn.setBounds(300, 30, 150, 30);
        addBtn.addActionListener(e -> {
            GymManagement.addMember(
                nameField.getText(),
                Integer.parseInt(ageField.getText()),
                typeField.getText()
            );
            JOptionPane.showMessageDialog(null, "Member Added!");
        });
        add(addBtn);

        JButton viewBtn = new JButton("View Members");
        viewBtn.setBounds(300, 70, 150, 30);
        viewBtn.addActionListener(e -> loadData());
        add(viewBtn);

        JLabel lblSearch = new JLabel("Search ID:");
        lblSearch.setBounds(20, 160, 100, 25);
        add(lblSearch);

        searchField = new JTextField();
        searchField.setBounds(120, 160, 150, 25);
        add(searchField);

        JButton searchBtn = new JButton("Search");
        searchBtn.setBounds(300, 160, 150, 30);
        searchBtn.addActionListener(e -> searchData());
        add(searchBtn);

        table = new JTable();
        JScrollPane sp = new JScrollPane(table);
        sp.setBounds(20, 210, 540, 180);
        add(sp);

        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setVisible(true);
    }

    void loadData() {
        try {
            ResultSet rs = GymManagement.viewMembers();
            DefaultTableModel model = new DefaultTableModel();
            model.addColumn("ID");
            model.addColumn("Name");
            model.addColumn("Age");
            model.addColumn("Type");

            while (rs.next()) {
                model.addRow(new Object[]{
                        rs.getInt("id"),
                        rs.getString("name"),
                        rs.getInt("age"),
                        rs.getString("membership_type")
                });
            }
            table.setModel(model);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    void searchData() {
        try {
            ResultSet rs = GymManagement.searchMember(Integer.parseInt(searchField.getText()));
            DefaultTableModel model = new DefaultTableModel();
            model.addColumn("ID");
            model.addColumn("Name");
            model.addColumn("Age");
            model.addColumn("Type");

            if (rs.next()) {
                model.addRow(new Object[]{
                        rs.getInt("id"),
                        rs.getString("name"),
                        rs.getInt("age"),
                        rs.getString("membership_type")
                });
            }
            table.setModel(model);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    public static void main(String[] args) {
        new GymUI();
    }
}
